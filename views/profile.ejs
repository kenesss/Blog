<html lang="en">
    <%- include('partials/head.ejs')%>
    <title>Document</title>
<body>
    <%- include('partials/header.ejs')%>
    <div class="main">
        <div class="main-left">
            <div class="left-text profile_text">
                <h1>Мои блоги</h1>
                <a href="/new" class="btn">Новый блог</a>
            </div>
            <%
                blog.forEach(item => {
            %> 
            <div class="block">
                <div class = "block-img">
                    <img src="<%=item.image%>" alt="">
                </div>
                <div class="left-subtext">
                    <%
                        if(loginUser.id == user.id){
                    %>
                    <div class="box">
                        <div class = "box_bar">
                            <i class="fa-solid fa-list" onclick="ChangeMenu(event)"></i>
                            <div id = "burger-menu">
                                <div class = "menu-item">
                                    <a href="/edit/<%=item._id%>">Редактировать</a>
                                    <a onclick="deleteBlog('<%=item._id%>', '<%=item.author._id%>')" >Удалить</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%
                        }
                    %>  
                    <h2><%=item.name%></h2>
                    <p><%=item.description%></p>
                </div>
                <div class="left-icons">
                    <div class="icon-line">
                        <img src="/img/icon/date.png" alt="">
                        <p>26.06.2020</p>
                    </div>
                    <div class="icon-line">
                        <img src="/img/icon/eye.png" alt="">
                        <p>21</p>
                    </div>
                    <div class="icon-line">
                        <img src="/img/icon/message.png" alt="">
                        <p>4</p>
                    </div>
                    <div class="icon-line">
                        <img src="/img/icon/dmessage.png" alt="">
                        <p><%=item.genre.name%></p>
                    </div>
                    <div class="icon-line">
                        <img src="/img/icon/Vector.png" alt="">
                        <p><%=item.author.full_name%></p>
                    </div>
                </div>
            </div>
            <%
                })
            %>
        </div>
        <div class="main-right">
            <img src="/img/avatar.png" class="foto-profile" alt="foto">
            <p><span>Полное имя:</span><%=user.full_name%></p>
            <p><span>E-mail: </span><%=user.email%></p>
            <%
                if(loginUser.id == user.id){
            %>
                        <a class="edit-btn">Редактировать профиль</a>
            <%
                }
            %>
        </div>
    </div>
    <%- include('partials/scripts.ejs')%>
</body>
</html>